{
  "compilerOptions": {
    "target": "ES2020",
    "types": ["node", "express", "multer"],   // ðŸ‘ˆ add express + multer
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "types"],   // ðŸ‘ˆ also include your custom types folder if you create one
  "exclude": ["node_modules", "dist"]
}
